<h1> Sign In </h1>

<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f|%>
<%= f.label :username %>
<%= f.text_field :username %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit "Sign In"%>
<% end %>


